<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/normal_margin"
    app:cardElevation="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/cyan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_padding"
        android:background="@drawable/card_bg_color_3">

        <TextView
            android:id="@+id/income_cardview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:text="6,000,000 Ks"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text" />

        <TextView
            android:id="@+id/income_cardview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:text="27/5/2022"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>