<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_dialog_default_color_2"
        android:backgroundTint="@color/yellow"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/normal_padding">

        <TextView
            android:id="@+id/PD_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Contract"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@android:color/transparent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/image_dialog_linear_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PD_dialog_ic_cash"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="2dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_cash"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/PD_dialog_tv_cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/large_margin"
                    android:text="50,000 Ks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_dialog_linear_banking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_dialog_linear_cash"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/PD_dialog_ic_banking"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_banking"
                    android:padding="2dp"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/PD_dialog_tv_banking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/large_margin"
                    android:text="50,000 Ks"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large_text"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>